<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="content-page">
        <div class="content">
            <div class="container-fluid mt-4">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <a asp-controller="Companies" asp-action="Create" class="btn btn-primary mb-3">Crear
                                    Usuario</a>
                                <h2>Usuarios</h2>
                                <form id="searchForm">
                                    <input type="text" id="searchInput" placeholder="Buscar por nombre...">
                                    <input type="submit" value="Buscar">
                                </form>
                                <div id="userList">
                                    <!-- Aquí se mostrarán los usuarios -->
                                </div>
                                <div class="table-responsive mt-4">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                           <tr class="bg-secondary text-white">
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Nit</th>
                                                <th>Address</th>
                                                <th>Description</th>
                                                <th>Logo</th>
                                                <th>Phone</th>
                                                <th>LegalRepresentative</th>
                                                <th>SectorId</th>
                                                <th>created_at</th>
                                                <th>updated_at</th>
                                                <th>Action</th>
                                            </tr>

                                        </thead>

                                        @foreach (var companie in Model)
                                        {
                                            <tr>
                                                <th scope="row">@companie.Id</th>
                                                <td>@companie.Name</td>
                                                <td>@companie.Nit</td>
                                                <td>@companie.Address</td>
                                                <td>@companie.Description</td>
                                                <td><img src="@companie.Logo" alt="Company Logo"
                                                        style="max-width: 100px; max-height: 100px;" /></td>
                                                <td>@companie.Phone</td>
                                                <td>@companie.LegalRepresentative</td>
                                                <td>@companie.SectorId</td>
                                                <td>@companie.created_at</td>
                                                <td>@companie.updated_at</td>
                                                <td>
                                                    <a asp-controller="Companies" asp-action="Details"
                                                        asp-route-id="@companie.Id">Details</a>
                                                    <a asp-controller="Companies" asp-action="Edit"
                                                        asp-route-id="@companie.Id">Edit</a>
                                                    <a asp-controller="Companies" asp-action="Delete"
                                                        asp-route-id="@companie.Id">Delete</a>

                                                </td>
                                            </tr>
                                        }
                   </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>