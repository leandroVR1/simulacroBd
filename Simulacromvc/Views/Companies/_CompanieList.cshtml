@model List<Companie>

<div class="content-page">
    <div class="content">
        <div class="container-fluid mt-4">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="table-responsive mt-4">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr class="bg-secondary text-white">
                                    <th>Id</th>
                                    <th>Nombres</th>
                                    <th>Nit</th>
                                    <th>Dirección</th>
                                    <th>Descripción</th>
                                    <th>Logo</th>
                                    <th>Teléfono</th>
                                    <th>Representante Legal</th>
                                    <th>Sector</th>
                                    <th>Creado</th>
                                    <th>Actualizado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var companie in Model)
                                {
                                    <tr>
                                        <td>@companie.Id</td>
                                        <td>@companie.Name</td>
                                        <td>@companie.Nit</td>
                                        <td>@companie.Address</td>
                                        <td>@companie.Description</td>
                                        <td><img src="@companie.Logo" alt="Company Logo" style="max-width: 100px; max-height: 100px;" /></td>
                                        <td>@companie.Phone</td>
                                        <td>@companie.LegalRepresentative</td>
                                        <td>@companie.SectorId</td>
                                        <td>@companie.created_at</td>
                                        <td>@companie.updated_at</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
